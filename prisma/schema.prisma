enum UserRole {
  USER
  ORGANIZER
  ADMIN
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  EXPIRED
}

// User model
model User {
  id              String      @id @default(cuid())
  name            String?
  email           String      @unique
  emailVerified   DateTime?
  password        String?
  image           String?
  role            UserRole    @default(USER)
  isverified      Boolean     @default(false)

  //Relations
  organizedEvents   Event[]   @relation("EventOrganizer")
  moderating        Event[]   @relation("EventModerators")
  bookings          Booking[]
  
  accounts          Account[]
}

// Event Model
model Event {
  id              String      @id @default(cuid())
  title           String      
  description     String
  date            DateTime

  //Localization
  address       String
  lat           Float
  lng           Float

  //Relations
  creatorId     String
  creator       User        @relation("EventOrganizer", fields: [creatorId], references: [id])

  moderators    User[]      @relation("EventModerators")
  bookings      Booking[]
}

model Booking {
  id          String          @id @default(cuid())
  createdAt   DateTime        @default(now())
  status      BookingStatus   @default(PENDING)

  //Relations
  userId      String
  user        User            @relation(fields: [userId], references: [id])

  eventId     String
  event       Event           @relation(fields: [eventId], references: [id])
}

//Auth.js model
model Account {
  id                  String          @id @default(cuid())
  userId              String
  type                String
  provider            String
  providerAccountId   String
  access_token        String? @db.Text
  token_type          String?
  user                User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

//token model
model VerificationToken {
  identifier          String
  token               String          @unique
  expires             DateTime

  @@unique([identifier, token])
}



generator client {
  provider = "prisma-client-js"
  engineType      = "library"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}
