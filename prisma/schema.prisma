enum UserRole {
  USER
  ORGANIZER
  ADMIN
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  EXPIRED
}

enum EventStatus {
  DRAFT
  PUBLISHED
  CANCELLED
  FINISHED
}

// User model
model User {
  id              String      @id @default(cuid())
  name            String?
  handle          String?     @unique
  email           String      @unique
  emailVerified   DateTime?
  password        String?
  image           String?
  role            UserRole    @default(USER)
  isverified      Boolean     @default(false)
  description     String?
  status          EventStatus @default(DRAFT)

  //Relations
  organizedEvents   Event[]   @relation("EventOrganizer")
  moderating        Event[]   @relation("EventModerators")
  bookings          Booking[]
  
  accounts          Account[]
}

// Event Model
model Event {
  id              String      @id @default(cuid())
  title           String      
  description     String?
  image           String?
  date            DateTime

  //Localization
  address       String
  lat           Float
  lng           Float

  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  //Relations
  creatorId     String
  creator       User        @relation("EventOrganizer", fields: [creatorId], references: [id])

  maxCapacity   Int?
  moderators    User[]      @relation("EventModerators")
  bookings      Booking[]
  bookingDeadline   DateTime?
}

model Booking {
  id          String          @id @default(cuid())
  createdAt   DateTime        @default(now())
  status      BookingStatus   @default(PENDING)
  guestsCount Int             @default(1)
  expiresAt   DateTime?
  
  //Relations
  userId      String
  user        User            @relation(fields: [userId], references: [id])

  eventId     String
  event       Event           @relation(fields: [eventId], references: [id])
}

//Auth.js model
model Account {
  id                  String          @id @default(cuid())
  userId              String
  type                String
  provider            String
  providerAccountId   String
  refresh_token       String? @db.Text
  access_token        String? @db.Text
  expires_at          Int?
  token_type          String?
  scope               String?
  id_token            String? @db.Text
  session_state       String?
  image               String?
  user                User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

//token model
model VerificationToken {
  identifier          String
  token               String          @unique
  expires             DateTime

  @@unique([identifier, token])
}



generator client {
  provider = "prisma-client-js"
  engineType      = "library"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}
