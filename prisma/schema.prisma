enum OrderStatus {
  PENDING
  PAID
  FAILED
}

enum UserRole {
  USER
  ORGANIZER
  ADMIN
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  EXPIRED
}

enum EventStatus {
  DRAFT
  PUBLISHED
  CANCELLED
  FINISHED
}

// User model
model User {
  id              String      @id @default(cuid())
  name            String?
  handle          String?     @unique
  email           String      @unique
  emailVerified   DateTime?
  password        String?
  image           String?
  role            UserRole    @default(USER)
  isverified      Boolean     @default(false)
  description     String?
  status          EventStatus @default(DRAFT)
  favorites       Favorite[]
  notifications   Notification[]

  //Relations
  organizedEvents   Event[]   @relation("EventOrganizer")
  moderating        Event[]   @relation("EventModerators")
  bookings          Booking[]
  
  accounts          Account[]
  orders             Order[]   
}

// Event Model
model Event {
  id              String      @id @default(cuid())
  title           String      
  description     String?
  image           String
  date            DateTime
  startTime       DateTime
  price           Float       @default(0)
  status          EventStatus @default(DRAFT)
  //Localization
  address       String
  lat           Float
  lng           Float

  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  //Relations
  creatorId     String
  creator       User        @relation("EventOrganizer", fields: [creatorId], references: [id])

  maxCapacity   Int?
  moderators    User[]      @relation("EventModerators")
  bookings      Booking[]
  bookingDeadline   DateTime?

  parentId      String?
  parent        Event?      @relation("EventToSubEvents", fields: [parentId], references: [id], onDelete: Cascade)
  subEvents     Event[]     @relation("EventToSubEvents")
  favouritedBy   Favorite[]
  subscribers   NotificationSubscription[]
  categories    Category[]
  viewsCount    Int       @default(0)
  interactions EventInteraction[]
}

model Category {
  id          String @id @default(cuid())
  name        String @unique
  color       String?

  events      Event[]
}

model Booking {
  id          String          @id @default(cuid())
  createdAt   DateTime        @default(now())
  status      BookingStatus   @default(PENDING)
  guestsCount Int             @default(1)
  expiresAt   DateTime?
  pricePaid   Float           @default(0)
  
  //Relations
  userId      String
  user        User            @relation(fields: [userId], references: [id])

  eventId     String
  event       Event           @relation(fields: [eventId], references: [id])

  orderId     String?
  order       Order?          @relation(fields: [orderId], references: [id])
}

model Order {
  id              String        @id @default(cuid())
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  
  userId          String
  user            User          @relation(fields: [userId], references: [id])
  
  totalAmount     Float         
  status          OrderStatus   @default(PENDING)
  
  paymentSessionId String?       @unique 
  
  bookings        Booking[]
}

//Auth.js model
model Account {
  id                  String          @id @default(cuid())
  userId              String
  type                String
  provider            String
  providerAccountId   String
  refresh_token       String? @db.Text
  access_token        String? @db.Text
  expires_at          Int?
  token_type          String?
  scope               String?
  id_token            String? @db.Text
  session_state       String?
  image               String?
  user                User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

//token model
model VerificationToken {
  identifier          String
  token               String          @unique
  expires             DateTime

  @@unique([identifier, token])
}

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  eventId   String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, eventId]) 
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title     String
  message   String
  isRead    Boolean  @default(false)
  link      String?  
  createdAt DateTime @default(now())
}
model NotificationSubscription {
  id      String @id @default(cuid())
  userId  String
  eventId String
  event   Event  @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@unique([userId, eventId])
}

generator client {
  provider = "prisma-client-js"
  engineType      = "library"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model EventInteraction {
  id        String   @id @default(cuid())
  eventId   String
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  userId    String? 
  ipHash    String?  
  createdAt DateTime @default(now())
}